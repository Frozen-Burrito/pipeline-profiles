<div id="condition-compliance" class="profile-section tabcontent">
  <div class="row">
    <div class="col-md-12">
      <h3>{{text.safety.complianceBtn}}</h3>
      <p class="small">{{text.safety.updated.conditions}}</p>
      <p>{{text.safety.conditionsp1}}</p>
      <p>{{text.safety.conditionsp2}}</p>
      <p>{{text.safety.conditionsp3}}</p>
      <p>{{text.safety.conditionsp4}}</p>
      <details>
        <summary>{{text.safety.inProgress}}</summary>
        <p>{{text.safety.inProgressLst.one}}</p>
        <ul class="lst-spcd">
          <li>{{text.safety.inProgressLst.two}}</li>
          <li>{{text.safety.inProgressLst.three}}</li>
          <li>{{text.safety.inProgressLst.four}}</li>
          <li>{{text.safety.inProgressLst.five}}</li>
          <li>{{text.safety.inProgressLst.six}}</li>
        </ul>
      </details>
      <details class="mrgn-bttm-md">
        <summary>{{text.safety.closed}}</summary>
        <p>{{text.safety.closedLst.one}}</p>
        <ul class="lst-spcd">
          <li>{{text.safety.closedLst.two}}</li>
          <li>{{text.safety.closedLst.three}}</li>
        </ul>
      </details>
      <div id="conditions-dashboard">
        <div class="row mrgn-tp-sm">
          <div class="col-md-12">
            <div class="plains_disclaimer"></div>
            <h3 id="conditions-map-title"></h3>
            <div
              class="btn-group btn-group-justified"
              id="conditions-nav-group"
            >
              <div class="btn-group btn-conditions">
                <button
                  type="button"
                  class="btn btn-default"
                  value="In Progress"
                  id="in-progress-btn"
                >
                  <div class="conditions-summary-title">
                    {{text.safety.inProgressBtn}}
                  </div>
                  <div
                    class="conditions-summary-value"
                    id="in-progress-summary"
                  ></div>
                </button>
              </div>
              <div class="btn-group btn-conditions">
                <button
                  type="button"
                  class="btn btn-default"
                  value="Closed"
                  id="closed-btn"
                >
                  <div class="conditions-summary-title">
                    {{text.safety.closedBtn}}
                  </div>
                  <div
                    class="conditions-summary-value"
                    id="closed-summary"
                  ></div>
                </button>
              </div>
              <div class="btn-group btn-conditions">
                <button
                  type="button"
                  class="btn btn-default"
                  value="not-shown"
                  id="no-location-btn"
                >
                  <div class="conditions-summary-title">
                    {{text.safety.noLocationBtn}}
                  </div>
                  <div
                    class="conditions-summary-value"
                    id="no-location-summary"
                  ></div>
                </button>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="container-chart-map" id="container-map"></div>
            <div
              class="alert alert-info profile-hide"
              id="conditions-definitions"
            ></div>
            <div
              class="alert alert-info profile-hide"
              id="no-location-info"
            ></div>
            {{> shared/source text=text.safety.sources.conditions}}
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p>{{text.safety.conditionsViz}}</p>
        </div>
      </div>
    </div>
  </div>
</div>