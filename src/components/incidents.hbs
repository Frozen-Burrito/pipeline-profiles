      <details>
        <summary>{{text.safety.incidentsDetails1.one}}</summary>
        <p>{{text.safety.incidentsDetails1.two}}</p>
        <ol class="lst-lwr-alph">
          <li>{{text.safety.incidentsDetails1.three}}</li>
          <li>{{text.safety.incidentsDetails1.four}}</li>
          <li>{{text.safety.incidentsDetails1.five}}</li>
          <li>{{text.safety.incidentsDetails1.six}}</li>
          <li>{{text.safety.incidentsDetails1.seven}}</li>
          <li>{{text.safety.incidentsDetails1.eight}}</li>
        </ol>
      </details>
      <details>
        <summary>{{text.safety.incidentsDetails2.one}}</summary>
        <p>{{text.safety.incidentsDetails2.two}}</p>
        <ol class="lst-lwr-alph">
          <li>{{text.safety.incidentsDetails2.three}}</li>
          <li>{{text.safety.incidentsDetails2.four}}</li>
          <li>{{text.safety.incidentsDetails2.five}}</li>
          <li>{{text.safety.incidentsDetails2.six}}</li>
          <li>{{text.safety.incidentsDetails2.seven}}</li>
          <li>{{text.safety.incidentsDetails2.eight}}</li>
        </ol>
      </details>
      <details>
        <summary>{{text.safety.incidentsDetails3.one}}</summary>
        <p>{{text.safety.incidentsDetails3.two}}</p>
        <div class="row">
          <div class="col-md-3">
            <p>{{text.safety.incidentsDetails3.three}}</p>
          </div>
          <div class="col-md-9">
            <section class="panel panel-default">
              <header class="panel-heading">
                <h5 class="panel-title">
                  {{text.safety.incidentsDetails3.four}}
                </h5>
              </header>
              <div class="panel-body">
                <ul class="lst-spcd">
                  <li>{{text.safety.incidentsDetails3.five}}</li>
                  <li>{{text.safety.incidentsDetails3.six}}</li>
                  <li>{{text.safety.incidentsDetails3.seven}}</li>
                </ul>
              </div>
            </section>
          </div>
        </div>
      </details>
      <div
        class="mrgn-tp-md mrgn-bttm-md"
        id="system-incidents-paragraph"
      ></div>
      <details class="mrgn-bttm-md">
        <summary>{{text.safety.incidentsDetails4.one}}</summary>
        <ul class="lst-spcd">
          <li>{{text.safety.incidentsDetails4.two}}</li>
          <li>{{text.safety.incidentsDetails4.three}}</li>
          <li>{{text.safety.incidentsDetails4.four}}</li>
          <li>{{text.safety.incidentsDetails4.five}}</li>
          <li>{{text.safety.incidentsDetails4.six}}</li>
          <li>
            <p>{{text.safety.incidentsDetails4.seven}}</p>
            <ul class="lst-spcd">
              <li>{{text.safety.incidentsDetails4.eight}}</li>
              <li>{{text.safety.incidentsDetails4.nine}}</li>
              <li>{{text.safety.incidentsDetails4.ten}}</li>
              <li>{{text.safety.incidentsDetails4.eleven}}</li>
              <li>{{text.safety.incidentsDetails4.twelve}}</li>
            </ul>
            <p>{{text.safety.incidentsDetails4.thirteen}}</p>
          </li>
          <li>{{text.safety.incidentsDetails4.fourteen}}</li>
        </ul>
      </details>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12" id="incidents-dashboard">
      <div class="plains_disclaimer"></div>
      <h3 class="dashboard-title" id="incidents-dashboard-title"></h3>
      <div id="inline-radio" class="radio-inline pull-right mrgn-tp-lg">
        <form>
          <label for="incident-count-btn" class="radio-inline">
            <input
              id="incident-count-btn"
              type="radio"
              name="type"
              value="frequency"
              checked="checked"
            />
            {{text.safety.incidentsCountRadio}}</label>
          <label for="incident-volume-btn" class="radio-inline">
            <input
              id="incident-volume-btn"
              type="radio"
              name="type"
              value="volume"
            />
            {{text.safety.incidentsVolRadio}}</label>
        </form>
      </div>
      <div class="btn-group btn-group-justified" id="incidents-view-type">
        <div class="btn-group">
          <button type="button" class="btn btn-default active" value="map">
            {{text.safety.incidentsMapBtn}}
          </button>
        </div>
        <div class="btn-group">
          <button type="button" class="btn btn-default" value="trends">
            {{text.safety.incidentsTrendBtn}}
          </button>
        </div>
      </div>
      <div class="row mrgn-tp-md">
        <div class="col-md-8 col-sm-8 col-xs-12">
          <div id="incidents-map"></div>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12 event-navigator">
          <div class="event-filter-nav" id="substance-bar"></div>
          <div class="event-filter-nav mrgn-tp-sm" id="status-bar"></div>
          <div class="event-filter-nav mrgn-tp-sm" id="year-bar"></div>
          <div class="event-filter-nav mrgn-tp-sm" id="province-bar"></div>
        </div>
      </div>
      <div id="incidents-time-series-section" class="profile-hide">
        <div class="row">
          <div class="col-md-9 col-sm-9">
            <div class="time-series" id="incidents-time-series"></div>
          </div>
          <div class="col-md-3 col-sm-3 event-navigator">
            <div class="event-filter-nav" id="substance-trend"></div>
            <div class="event-filter-nav mrgn-tp-sm" id="status-trend"></div>
            <div class="event-filter-nav mrgn-tp-sm" id="what-trend"></div>
            <div class="event-filter-nav mrgn-tp-sm" id="why-trend"></div>
            <div class="event-filter-nav mrgn-tp-sm" id="province-trend"></div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div
              class="alert alert-info disclaimer-style"
              id="trend-definitions-incidents"
            ></div>
          </div>
        </div>
      </div>
      <section class="panel panel-info mrgn-tp-md" id="nearby-incidents-popup">
        <header class="panel-heading">
          <h5 class="panel-title">{{text.safety.incidentsNearMe}}</h5>
        </header>
        <div class="panel-body incidents-near-me">
          <div class="row mrgn-tp-0 mrgn-bttm-0 mrgn-lft-0 mrgn-rght-0">
            <div
              class="col-md-12 cerlabel dashboard-style nearby-title"
              id="find-incidents-title"
            >
              {{text.safety.incidentsSelectRange}}
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12 center-stuff">
              <input
                name="html5shim-1"
                id="incidents-range-slide"
                type="range"
                min="0"
                max="200"
                step="1"
                value="100"
              />
            </div>
            <div class="col-md-3 col-sm-3 col-xs-6 center-stuff">
              <button
                type="button"
                value="100"
                id="find-incidents-btn"
                class="btn btn-default col-md-12"
              >
                {{text.safety.incidentsFind}}
              </button>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-6 center-stuff">
              <button
                type="button"
                id="reset-incidents-btn"
                class="btn btn-default col-md-12"
                disabled="disabled"
              >
                {{text.safety.incidentsRefill}}
              </button>
            </div>
          </div>
          <div class="row mrgn-tp-lg">
            <div class="col-md-12" id="nearby-incidents-flag"></div>
          </div>
        </div>
      </section>
      {{> shared/source text=text.safety.sources.incidents}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p>{{text.safety.incidentsViz}}</p>
    </div>
  </div>
</div>