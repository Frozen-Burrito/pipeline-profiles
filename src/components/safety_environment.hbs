<h2 id="safety-environment">{{text.safety.header}}</h2>
<div
  class="btn-group btn-group-justified mrgn-tp-lg"
  id="safety-env-navigation"
>
  <div class="btn-group tab">
    <button
      type="button"
      class="btn btn-default tablinks"
      onclick="openTab(event, 'condition-compliance')"
      id="defaultClick"
    >
      {{text.safety.complianceBtn}}
    </button>
  </div>
  <div class="btn-group tab">
    <button
      type="button"
      class="btn btn-default tablinks"
      onclick="openTab(event, 'pipeline-incidents')"
    >
      {{text.safety.incidentsBtn}}
    </button>
  </div>
  <div class="btn-group tab">
    <button
      type="button"
      class="btn btn-default tablinks"
      onclick="openTab(event, 'operations-maintenance')"
    >
      {{text.safety.oandmBtn}}
    </button>
  </div>
  <div class="btn-group tab">
    <button
      type="button"
      class="btn btn-default tablinks"
      onclick="openTab(event, 'remediation')"
    >
      {{text.safety.remediationBtn}}
    </button>
  </div>
</div>

