<h2 id="safety-environment">{{text.safety.header}}</h2>
<div
  class="btn-group btn-group-justified mrgn-tp-lg"
  id="safety-env-navigation"
>
  <div class="btn-group tab">
    <button
      type="button"
      class="btn btn-default tablinks"
      onclick="openTab(event, 'condition-compliance')"
      id="defaultClick"
    >
      {{text.safety.complianceBtn}}
    </button>
  </div>
  <div class="btn-group tab">
    <button
      type="button"
      class="btn btn-default tablinks"
      onclick="openTab(event, 'pipeline-incidents')"
    >
      {{text.safety.incidentsBtn}}
    </button>
  </div>
</div>

<div id="condition-compliance" class="profile-section tabcontent">
  <div class="row">
    <div class="col-md-12">
      <h3>{{text.safety.complianceBtn}}</h3>
      <p class="small">{{text.safety.complianceUpdated}}</p>
      <p>{{text.safety.conditionsp1}}</p>
      <p>{{text.safety.conditionsp2}}</p>
      <p>{{text.safety.conditionsp3}}</p>
      <p>{{text.safety.conditionsp4}}</p>
      <details>
        <summary>{{text.safety.inProgress}}</summary>
        <p>{{text.safety.inProgressLst.one}}</p>
        <ul class="lst-spcd">
          <li>{{text.safety.inProgressLst.two}}</li>
          <li>{{text.safety.inProgressLst.three}}</li>
          <li>{{text.safety.inProgressLst.four}}</li>
          <li>{{text.safety.inProgressLst.five}}</li>
          <li>{{text.safety.inProgressLst.six}}</li>
        </ul>
      </details>
      <details>
        <summary>{{text.safety.closed}}</summary>
        <p>{{text.safety.closedLst.one}}</p>
        <ul class="lst-spcd">
          <li>{{text.safety.closedLst.two}}</li>
          <li>{{text.safety.closedLst.three}}</li>
        </ul>
      </details>
      <div class="plains_disclaimer"></div>
      <div id="conditions-dashboard">
        <div class="row mrgn-tp-sm">
          <div class="col-md-12">
            <h3 id="conditions-map-title"></h3>
            <div
              class="btn-group btn-group-justified"
              id="conditions-nav-group"
            >
              <div class="btn-group btn-conditions">
                <button
                  type="button"
                  class="btn btn-default"
                  value="In Progress"
                  id="in-progress-btn"
                >
                  <div class="conditions-summary-title">
                    {{text.safety.inProgressBtn}}
                  </div>
                  <div
                    class="conditions-summary-value"
                    id="in-progress-summary"
                  ></div>
                </button>
              </div>
              <div class="btn-group btn-conditions">
                <button
                  type="button"
                  class="btn btn-default"
                  value="Closed"
                  id="closed-btn"
                >
                  <div class="conditions-summary-title">
                    {{text.safety.closedBtn}}
                  </div>
                  <div
                    class="conditions-summary-value"
                    id="closed-summary"
                  ></div>
                </button>
              </div>
              <div class="btn-group btn-conditions">
                <button
                  type="button"
                  class="btn btn-default"
                  value="not-shown"
                  id="no-location-btn"
                >
                  <div class="conditions-summary-title">
                    {{text.safety.noLocationBtn}}
                  </div>
                  <div
                    class="conditions-summary-value"
                    id="no-location-summary"
                  ></div>
                </button>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="container-chart-map" id="container-map"></div>
            <div
              class="alert alert-info profile-hide"
              id="conditions-definitions"
            ></div>
            <div
              class="alert alert-info profile-hide"
              id="no-location-info"
            ></div>
            <details class="mrgn-tp-sm">
              <summary>{{text.sourceTitle}}</summary>
              <p>
                <strong>{{text.dataSourceTitle}} </strong>
                {{text.safety.conditionsSourceLink}}
              </p>
              <p>
                <strong>{{text.descriptionTitle}} </strong>
                {{text.safety.conditionsDescription}}
              </p>
            </details>
            <p class="mrgn-tp-lg">{{text.safety.conditionsOpenData}}</p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p>{{text.safety.conditionsViz}}</p>
        </div>
      </div>
    </div>
  </div>
</div>

