  <div class="row">
    <div class="col-md-12 mrgn-tp-lg" id="incidents-dashboard">
      <div class="plains_disclaimer"></div>
      <div class="dashboard-title" id="incidents-dashboard-title"></div>
      <div id="inline-radio" class="radio-inline pull-right mrgn-tp-sm">
        <form>
          <label for="incident-count-btn" class="radio-inline">
            <input
              id="incident-count-btn"
              type="radio"
              name="type"
              value="frequency"
              checked="checked"
            />
            {{text.safety.incidentsCountRadio}}</label>
          <label for="incident-volume-btn" class="radio-inline">
            <input
              id="incident-volume-btn"
              type="radio"
              name="type"
              value="volume"
            />
            {{text.safety.incidentsVolRadio}}</label>
        </form>
      </div>
      <div
        class="btn-group btn-group-justified mrgn-tp-xl"
        id="incidents-view-type"
      >
        <div class="btn-group">
          <button type="button" class="btn btn-default active" value="map">
            {{text.safety.incidentsMapBtn}}
          </button>
        </div>
        <div class="btn-group">
          <button type="button" class="btn btn-default" value="trends">
            {{text.safety.incidentsTrendBtn}}
          </button>
        </div>
      </div>
      <div class="row mrgn-tp-md">
        <div class="col-md-8">
          <div id="incidents-map"></div>
        </div>
        <div class="col-md-4 event-navigator">
          <div class="event-filter-nav" id="substance-bar"></div>
          <div class="event-filter-nav mrgn-tp-sm" id="status-bar"></div>
          <div class="event-filter-nav mrgn-tp-sm" id="year-bar"></div>
          <div class="event-filter-nav mrgn-tp-sm" id="province-bar"></div>
        </div>
      </div>
      <div id="incidents-time-series-section" class="profile-hide">
        <div class="row">
          <div class="col-md-9">
            <div class="time-series" id="incidents-time-series"></div>
          </div>
          <div class="col-md-3">
            <div class="event-filter-nav" id="substance-trend"></div>
            <div class="event-filter-nav mrgn-tp-sm" id="status-trend"></div>
            <div class="event-filter-nav mrgn-tp-sm" id="what-trend"></div>
            <div class="event-filter-nav mrgn-tp-sm" id="why-trend"></div>
            <div class="event-filter-nav mrgn-tp-sm" id="province-trend"></div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div
              class="alert alert-info disclaimer-style"
              id="trend-definitions-incidents"
            ></div>
          </div>
        </div>
      </div>
      <section class="panel panel-info mrgn-tp-md" id="nearby-incidents-popup">
        <header class="panel-heading">
          <h5 class="panel-title">{{text.safety.incidentsNearMe}}</h5>
        </header>
        <div class="panel-body incidents-near-me">
          <div class="row mrgn-tp-0 mrgn-bttm-0 mrgn-lft-0 mrgn-rght-0">
            <div
              class="col-md-12 cerlabel dashboard-style nearby-title"
              id="find-incidents-title"
            >
              {{text.safety.incidentsSelectRange}}
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 center-stuff">
              <input
                name="html5shim-1"
                id="incidents-range-slide"
                type="range"
                min="0"
                max="200"
                step="1"
                value="100"
              />
            </div>
            <div class="col-md-3 center-stuff">
              <button
                type="button"
                value="100"
                id="find-incidents-btn"
                class="btn btn-default col-md-12"
              >
                {{text.safety.incidentsFind}}
              </button>
            </div>
            <div class="col-md-3 center-stuff">
              <button
                type="button"
                id="reset-incidents-btn"
                class="btn btn-default col-md-12"
                disabled="disabled"
              >
                {{text.safety.incidentsRefill}}
              </button>
            </div>
          </div>
          <div class="row mrgn-tp-lg">
            <div class="col-md-12" id="nearby-incidents-flag"></div>
          </div>
        </div>
      </section>
      <div class="row">
        <div class="col-md-12">
          <details>
            <summary>{{text.sourceTitle}}</summary>
            <p>
              <strong>{{text.dataSourceTitle}} </strong>
              {{text.safety.incidentsSourceLink}}
            </p>
            <p>{{text.safety.incidentsDescription}}</p>
          </details>
          <p class="mrgn-tp-lg">{{text.safety.incidentsOpenData}}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p>{{text.safety.incidentsViz}}</p>
    </div>
  </div>
</div>