<details>
    <summary>{{text.summary}}</summary>
    <p>{{text.introParagraph}}</p>
    <ol type="{{text.listType}}">
        {{#each text.listItems}}
            <li>{{this.text}}</li>
            {{#if this.subList}}
                <ol type="a">
                    {{#each this.subList}}
                        <li>{{this}}</li>
                    {{/each}}
                </ol>
            {{/if}}
        {{/each}}
    </ol>
</details>